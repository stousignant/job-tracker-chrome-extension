{
  "manifest_version": 3,
  "name": "Job Tracker",
  "version": "1.0",
  "description": "A simple extension for saving job offers into a Notion database.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}